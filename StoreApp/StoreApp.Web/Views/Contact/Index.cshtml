@{
    ViewData["Title"] = "İletişim";
}

<div class="container py-5">
    <h1 class="mb-4">Bize Ulaşın</h1>

    <div class="row">
        <div class="col-md-6">
            <h4>İletişim Bilgileri</h4>
            <ul class="list-unstyled">
                <li><strong>Email:</strong> destek@eticaret.com</li>
                <li><strong>Telefon:</strong> +90 123 456 78 90</li>
                <li><strong>Adres:</strong> İstanbul, Türkiye</li>
            </ul>
        </div>

        <div class="col-md-6">
            <h4>Bize Mesaj Gönderin</h4>
            <form>
                <div class="form-group">
                    <label for="name">Ad Soyad</label>
                    <input type="text" class="form-control" id="name" placeholder="Adınızı giriniz">
                </div>
                <div class="form-group">
                    <label for="email">Email adresi</label>
                    <input type="email" class="form-control" id="email" placeholder="Email adresinizi giriniz">
                </div>
                <div class="form-group">
                    <label for="message">Mesajınız</label>
                    <textarea class="form-control" id="message" rows="4" placeholder="Mesajınızı yazınız"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Gönder</button>
            </form>
        </div>
    </div>
</div>
