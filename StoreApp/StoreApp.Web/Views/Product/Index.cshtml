@model StoreApp.Web.Models.ProductListViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <!-- Kategori Filtreleme -->
    <div class="mb-4">
        <vc:categories-list></vc:categories-list>
    </div>

   <div class="container mt-5"></div>
    <h1 class="text-center mb-4">Ürünler</h1>

    <!-- Ürün Listesi -->
    @if (!Model.Products.Any())
    {
        <div class="alert alert-warning" role="alert">
            Ürün Bulunamadı.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card h-100 shadow-sm product-card">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-muted">@(product.Description?.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description)</p>
                            <p class="card-text fw-bold text-primary">Fiyat: @product.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("tr-TR"))</p>
                        </div>
                        <div class="card-footer bg-transparent border-0 d-flex justify-content-between">
                            <a asp-action="Details" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-primary btn-sm">Detaylar</a>
                            <form asp-page="/Cart" asp-route-id="@product.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-success btn-sm">Sepete Ekle</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

    <!-- Sayfalama -->
    @{
        string currentCategory = ViewBag.SelectedCategory as string;
    }
    @if (Model.PageInfo.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    @for (int i = 1; i <= Model.PageInfo.TotalPages; i++)
                    {
                        string url = !string.IsNullOrEmpty(currentCategory)
                            ? Url.Action("Index", "Product", new { category = currentCategory, page = i })
                            : Url.Action("Index", "Product", new { page = i, category = (string)null });

                        <li class="page-item @(Model.PageInfo.CurrentPage == i ? "active" : "")">
                            <a class="page-link" href="@url">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>

<style>
    .product-card {
        transition: transform 0.2s ease-in-out;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .card-img-top {
        border-bottom: 1px solid #dee2e6;
    }
</style>