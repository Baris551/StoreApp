@model StoreApp.Web.Models.ProductViewModel

@{
    ViewData["Title"] = "Ürün Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name" style="max-height: 400px; object-fit: cover;">
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p class="text-muted">@Model.Description</p>
            <h4 class="text-primary mb-3">@Model.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("tr-TR"))</h4>
            <form asp-page="/Cart" asp-route-id="@Model.Id" method="post" style="display:inline;">
                <button type="submit" class="btn btn-success">Sepete Ekle</button>
            </form>
            <a asp-action="Index" asp-controller="Product" class="btn btn-secondary">Geri Dön</a>
        </div>
    </div>
</div>